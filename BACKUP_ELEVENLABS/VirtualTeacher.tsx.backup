      });

      const newEcosAgent = await createEcosAgent(
        baseAgentId,
        user.email || user.id
      );

      setEcosAgent(newEcosAgent);
      console.log('‚úÖ Agent √âcos cr√©√©:', newEcosAgent.id);

      toast({
        title: 'D√©marrage de l\'avatar...',
        description: 'Initialisation de la session vid√©o',
      });

      const avatarId = getDefaultAvatarId();
      const newEcosSession = await createEcosSession(
        newEcosAgent.id,
        avatarId
      );

      setEcosSession(newEcosSession);
      console.log('‚úÖ Session √âcos cr√©√©e:', newEcosSession.session_id);
      console.log('üîó Iframe URL:', newEcosSession.iframe_url);
      */

      console.log('‚ö†Ô∏è Avatar √âcos d√©sactiv√© (n√©cessite abonnement)');

      // ========================================
      // √âTAPE 6 : SAUVEGARDER EN BASE DE DONN√âES
      // ========================================
      const { data: newConversation, error: conversationError } = await supabase
        .from('ai_teacher_conversations')
        .insert({
          user_id: user.id,
          conversation_type: promptContext.conversationType,
          context_id: promptContext.conversationType === 'course' ? selectedCourseId :
                     promptContext.conversationType === 'exercise' ? selectedExerciseId :
                     promptContext.conversationType === 'error' ? selectedErrorId : null,
          context_data: {
