      console.log('üè• Troubles:', troublesText);

      // Formater les infos utilisateur
      const userInfosFormatted = `
Niveau d'√©ducation: ${profileData?.education_level || 'Non renseign√©'}
Classe: ${profileData?.classes || 'Non renseign√©'}
Mati√®res: ${profileData?.subjects || 'Non renseign√©'}
`.trim();

